{
  "name": "newman-parallel",
  "version": "1.0.2",
  "description": "A framework to execute multiple Postman collections in parallel run with Newman.Includes Allure, HTML-extra and Junit reporters integrations",
  "main": "index.js",
  "scripts": {
    "pretest": "rimraf ./reports/allure/* && rimraf ./reports/html/* && rimraf ./reports/xml/*",
    "test": "node index.js",
    "test:parallel": "npm run pretest && node ./src/main-parallel.js && npm run posttest",
    "allure-serve": "allure serve reports/allure",
    "posttest": "npm run history && allure generate ./reports/allure -o ./reports/allure-report --clean && npx allure-patch ./reports/allure-report",
    "history": "mkdir ./reports/allure/history && cp ./reports/allure-report/history/* ./reports/allure/history"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*.+(cjs|js|ts|tsx)": [
      "eslint --fix"
    ],
    "**/*.+(cjs|js|ts|json)": [
      "prettier --write"
    ]
  },
  "keywords": [
    "postman",
    "newman",
    "api",
    "collections",
    "allure"
  ],
  "author": "Valentin Lutchanka",
  "license": "Apache-2.0",
  "bin": {
    "newman-parallel": "./index.js"
  },
  "dependencies": {
    "@felipecrs/newman-reporter-allure": "1.1.2",
    "allure-commandline": "2.26.0",
    "allure-patch": "^1.0.3",
    "async": "^3.2.5",
    "newman": "6.1.0",
    "newman-reporter-htmlextra": "1.23.0",
    "newman-reporter-junitfull": "^1.1.1"
  },
  "devDependencies": {
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "^4.3.8",
    "prettier": "3.2.4",
    "rimraf": "3.0.0"
  }
}